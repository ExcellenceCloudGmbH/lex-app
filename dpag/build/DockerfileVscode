FROM codercom/code-server:4.2.0

USER root
RUN apt-get update && apt-get install -y curl gnupg2 && \
    curl https://packages.microsoft.com/keys/microsoft.asc | apt-key add - && \
    curl https://packages.microsoft.com/config/debian/11/prod.list > /etc/apt/sources.list.d/mssql-release.list && \
    apt-get update && \
    ACCEPT_EULA=Y apt-get install -y \
        msodbcsql17 \
        git \
        libpq-dev \
        unixodbc-dev \
        wget \
        unzip \
        python3-pip \
        telnet
EXPOSE 22
USER coder

ADD ./deployment/launch.json /home/coder/.vscode/launch.json
ADD ./deployment/settings.json /home/coder/.vscode/settings.json
ADD ./requirements.txt /home/coder/vscode/DjangoProcessAdminGeneric/requirements.txt
               
RUN pip3 install -r /home/coder/vscode/DjangoProcessAdminGeneric/requirements.txt
