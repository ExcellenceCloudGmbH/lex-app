FROM ubuntu:latest

RUN apt-get update && \
    apt-get install -y apt-transport-https gnupg2 curl && \
    curl -s https://packages.cloud.google.com/apt/doc/apt-key.gpg | apt-key add - && \
    echo "deb https://apt.kubernetes.io/ kubernetes-xenial main" | tee -a /etc/apt/sources.list.d/kubernetes.list && \
    apt-get update && \
    apt-get install -y kubectl postgresql-client && \
    apt-get install -y python3 python3-pip && \
    pip3 install quantumrandom

ADD ./build/credential_generator.sh /app/
RUN chmod +x /app/credential_generator.sh

CMD /app/credential_generator.sh