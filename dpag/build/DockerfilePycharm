FROM ubuntu:20.04

# install all necessary packages
WORKDIR /app
ENV DEBIAN_FRONTEND=noninteractive
RUN apt-get update && apt-get install -y curl gnupg2 wget && \
    curl https://packages.microsoft.com/keys/microsoft.asc | apt-key add - && \
    curl https://packages.microsoft.com/config/debian/11/prod.list > /etc/apt/sources.list.d/mssql-release.list && \
    wget -q -O - https://dl-ssl.google.com/linux/linux_signing_key.pub | apt-key add - && \
    apt-get update && \
    ACCEPT_EULA=Y apt-get install -y \
        python3 \
        openssh-server \
        msodbcsql17 \
        gcc \
        git \
        net-tools \
        libpq-dev \
        wkhtmltopdf \
        lsyncd \
        g++ \
        unixodbc-dev \
        wget \
        unzip \
        python3-pip \
        unison \
        libnss3 \
        locales-all \
        procps \
        time \
        mc \
        strace \
        rsyslog && \
    echo "deb [arch=amd64]  http://dl.google.com/linux/chrome/deb/ stable main" >> /etc/apt/sources.list.d/google-chrome.list && \
    apt-get update && \
    apt-get install -y google-chrome-stable

# Download and install the MS corefonts, since regular apt install could not find it
RUN apt-get update && \
    wget http://ftp.de.debian.org/debian/pool/contrib/m/msttcorefonts/ttf-mscorefonts-installer_3.7_all.deb -P /tmp && \
    ACCEPT_EULA=Y apt install -y \
        /tmp/ttf-mscorefonts-installer_3.7_all.deb && \
    fc-cache -fv && \
    rm -rf /tmp/ttf-mscorefonts-installer_3.7_all.deb

RUN pip3 install --upgrade pip

# Install Pycharm
RUN mkdir temp && \
    curl -fsSL -o ide.tar.gz https://download-cf.jetbrains.com/python/pycharm-professional-2022.3.1.tar.gz && \
    tar xfz ide.tar.gz --strip-components=1 -C temp && \
    rm ide.tar.gz


WORKDIR /app/DjangoProcessAdminGeneric

RUN pip3 install virtualenv

ENV VIRTUAL_ENV=/app/DjangoProcessAdminGeneric/venv
RUN python3 -m virtualenv $VIRTUAL_ENV
ENV PATH="$VIRTUAL_ENV/bin:$PATH"

# Install dependencies:
COPY requirements.txt .
RUN pip install -r requirements.txt

ADD . /app/DjangoProcessAdminGeneric
RUN python3 build/download_chromedriver.py && \
    rm -rf .git && \
    chmod +x /app/DjangoProcessAdminGeneric/build/pycharm_container_startup.sh && \
    chmod +x /app/DjangoProcessAdminGeneric/build/wait-for-it.sh

RUN useradd -rm -d /home/ubuntu -s /bin/bash -g root -G sudo -u 1000 analyst 

RUN echo 'analyst:remembame' | chpasswd
RUN echo "SyslogFacility AUTH" >> /etc/ssh/sshd_config
RUN echo "LogLevel DEBUG" >> /etc/ssh/sshd_config

RUN service ssh start

EXPOSE 22
CMD /app/DjangoProcessAdminGeneric/build/pycharm_container_startup.sh





