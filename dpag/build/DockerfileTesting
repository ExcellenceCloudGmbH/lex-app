FROM codercom/code-server:4.2.0

USER root
# install all necessary packages
WORKDIR /vscode
RUN apt-get update && apt-get install -y curl gnupg2 wget && \
    curl https://packages.microsoft.com/keys/microsoft.asc | apt-key add - && \
    curl https://packages.microsoft.com/config/debian/11/prod.list > /etc/apt/sources.list.d/mssql-release.list && \
    wget -q -O - https://dl-ssl.google.com/linux/linux_signing_key.pub | apt-key add - && \
    sh -c 'echo "deb [arch=amd64] https://dl.google.com/linux/chrome/deb/ stable main" >> /etc/apt/sources.list.d/google-chrome.list' && \
    apt-get update && \
    ACCEPT_EULA=Y apt-get install -y \
        python3 \
        openssh-server \
        msodbcsql17 \
        gcc \
        git \
        net-tools \
        libpq-dev \
        wkhtmltopdf \
        lsyncd \
        g++ \
        unixodbc-dev \
        wget \
        unzip \
        python3-pip \
        unison \
        libnss3 \
        locales-all && \
    echo "deb [arch=amd64]  http://dl.google.com/linux/chrome/deb/ stable main" >> /etc/apt/sources.list.d/google-chrome.list && \
    apt-get update && \
    apt-get install -y google-chrome-stable


# Download and install the MS corefonts, since regular apt install could not find it
RUN apt-get update && \
    wget http://ftp.de.debian.org/debian/pool/contrib/m/msttcorefonts/ttf-mscorefonts-installer_3.7_all.deb -P /tmp && \
    ACCEPT_EULA=Y apt install -y \
        /tmp/ttf-mscorefonts-installer_3.7_all.deb && \
    fc-cache -fv

# copy the repository and install all requirements
ADD . /vscode/DjangoProcessAdminGeneric
WORKDIR /vscode/DjangoProcessAdminGeneric
RUN rm -rf .git


RUN pip3 install --upgrade pip

RUN pip3 install -r ./requirements.txt && \
    chmod +x /vscode/DjangoProcessAdminGeneric/build/testcontainer_startup.sh && \
    chmod +x /vscode/DjangoProcessAdminGeneric/build/wait-for-it.sh

WORKDIR /vscode/DjangoProcessAdminGeneric/generic_app/submodels

RUN code-server --install-extension ms-python.python && \
    mkdir /home/coder/.vscode

COPY /deployment/testing-launch.json .vscode/launch.json
COPY /deployment/lex.gitignore .gitignore
COPY /deployment/testing-launch.json /home/coder/.vscode/launch.json
COPY /deployment/settings.json /home/coder/.vscode/settings.json

